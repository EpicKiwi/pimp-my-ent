{
  "manifest_version": 2,
  "name": "Pimp my ENT",
  "version": "1.3.3",
  "description": "Applique un thème plus ergonomique à l'ENT CESI",
  "web_accessible_resources": ["assets/font-awesome/fontawesome-webfont.ttf"],
  "applications": {
    "gecko": {
      "id": "pimpmyent@epickiwi.fr",
      "strict_min_version": "48.0"
    }
  },
  "permissions": ["storage"],
  "background": {
    "page": "background/bg-page.html"
  },
  "content_scripts": [
    {
      "matches": ["*://wayf.cesi.fr/login?*"],
      "js": ["lib/storage.js", "global.js", "login/login-autocomplete.js"],
      "css": ["assets/font-awesome/font-awesome.firefox.css", "login/style.css"]
    },
    {
      "matches": ["*://ent.cesi.fr/", "*://ent.cesi.fr/?*"],
      "js": ["assets/jquery.js", "global.js", "home/page-manipulation.js"],
      "css": ["assets/font-awesome/font-awesome.firefox.css", "home/style.css"]
    }
  ]
}
